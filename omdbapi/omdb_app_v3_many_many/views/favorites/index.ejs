<h1>Favorites</h1>

<% favorites.forEach(function(movie) { %>
<div class="well">
  <img src="<%= movie.poster %>" height="200" class="pull-right">
  <h2><a href="/movies/<%= movie.imdbId %>"><%= movie.title %> (<%= movie.year %>)</a></h2>
  <a href="/favorites/<%= movie.id %>/tags/new" class="btn btn-success">Add a Tag</a>
  <a href="/favorites/<%= movie.id %>/comments" class="btn btn-primary">
    Comments (<%= movie.comments.length %>)
  </a>
  <form method="post" action="/favorites/<%= movie.id %>?_method=delete">
  <button type="submit" class="btn btn-danger glyphicon glyphicon-trash"></button>
  </form>

  <ul>
  <% movie.tags.forEach(function(tag) { %>
    <li><%= tag.name %></li>
  <% }); %>
  </ul>

</div>
<% }); %>